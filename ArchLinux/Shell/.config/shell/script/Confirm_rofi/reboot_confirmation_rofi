#!/usr/bin/env bash
set -euo pipefail

swaync-client -cp

choice="$(
  printf '%s\n' No Yes |
    rofi -dmenu -normal-window \
      -window-title "confirmbox" \
      -mesg "Confirm to reboot" \
      -theme ~/.config/rofi/themes/confirmation-box.rasi
)"

case "${choice:-}" in
    Yes)
        reboot
        ;;
    No|"")
        exit 0
        ;;
esac
